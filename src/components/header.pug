mixin header()
    header.header 
        .header__nav.container 
            .header__left 
                a(href="index.html").header__logo
                    img(src="@img/logo.svg", alt="" draggable="false") 
                    .sm 
                        img(src="@img/logo-short.svg", alt="" draggable="false")
                .header__list 
                    a(href="#!").header__link О нас 
                    a(href="#!").header__link CPA-сеть
                    a(href="#!").header__link Аренда приложений
                    a(href="#!").header__link Вакансии
