                .header__lang 
                    button.header__lang-btn RU
                        <svg width="9" height="6" viewBox="0 0 9 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4.75731 3.70723L8.05732 0.407227L8.99998 1.34989L4.75731 5.59256L0.514648 1.34989L1.45732 0.407227L4.75731 3.70723Z" fill="white"/>
